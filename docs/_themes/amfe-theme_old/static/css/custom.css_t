/* Admonitions */
.admonition {
/*  padding: .2rem .5rem;*/
/* margin: 0 .2rem; */
  margin-bottom: 2.5rem;
  font-size: 90%;
/*  white-space: nowrap; */
  background: #F1F1F1; /* Skeleton */
  /* background: #CCCCC6; TUM */
  border: 1px solid #E1E1E1; /* Skeleton */
  /* border: 1px solid #808080; TUM */
  border-radius: 4px;
  display: block;
  padding: 1rem 1.5rem;
  /* margin: 0;
white-space: pre;*/
}

.admonition p {
  display: inline;
}

div.note {
  border-color: #A2AD00
}

div.admonition-todo {
  border-color: #c4071b
}

div.admonition-todo p {
  color: #c4071b
}

.admonition-title {
  font-weight: 900;
  margin-right: 0.1rem;
}

.attention .admonition-title {
  color: #E37222
}

.caution .admonition-title {
  color: #E37222
}

.danger .admonition-title {
  color: #E37222
}

.error .admonition-title {
  color: #E37222
}

.hint .admonition-title {
  color: #A2AD00
}

.important .admonition-title {
  color: #E37222
}

.note .admonition-title {
  color: #A2AD00
}

.tip .admonition-title {
  color: #A2AD00
}

.warning .admonition-title {
  color: #E37222
}





.footer {
  padding: 2rem 0 1rem;
  background-color: #333333;
  color: #CCCCC6;
}

form.search {
  margin: 0;
}

input.searchheader {
  margin: 0;
}



.headerlink {
  display: none;
}

/* Contents of Documentation */
.section {
  text-align: left;
}

@media (min-width: 550px) {
  .hsection {
    padding: 12rem 0 11rem;
  }
}

@media (min-width: 750px) {
  .hsection {
    padding: 14rem 0 15rem;
  }
}

@media (minwidth: 1000px) {
  .hsection {
    padding: 20rem 0 19rem;
  }
}
